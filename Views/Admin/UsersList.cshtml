@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    int i = 1;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title">قائمة مستخدمي النظام</h4>
                    <a href="/Identity/Account/Register" class="btn btn-gradient-primary btn-fw">
                        <i class="mdi mdi-account-plus"></i> إضافة مستخدم
                    </a>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>اسم المستخدم</th>
                                <th>البريد الإلكتروني</th>
                                <th>الحالة</th>
                                <th>العمليات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@user.UserName</td>
                                    <td>@user.Email</td>
                                    <td><label class="badge badge-gradient-success">نشط</label></td>
                                    <td>
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-inverse-info btn-icon" title="تعديل">
                                            <i class="mdi mdi-pencil"></i>
                                        </a>
                                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-inverse-danger btn-icon" onclick="return confirm('حذف؟')" title="حذف">
                                                <i class="mdi mdi-delete"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>