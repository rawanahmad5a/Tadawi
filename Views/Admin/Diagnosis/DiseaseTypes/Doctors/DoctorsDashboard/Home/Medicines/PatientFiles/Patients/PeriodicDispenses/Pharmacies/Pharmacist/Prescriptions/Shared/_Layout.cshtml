<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام تداوي</title>

    <!-- Google Fonts - Cairo for better Arabic -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom Theme -->
    <link rel="stylesheet" href="~/css/theme.css" />

    <style>
        /* Sidebar Styles */
        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #fff;
            color: #333;
            transition: all 0.3s;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.05);
            min-height: 100vh;
        }

        #sidebar .sidebar-header {
            padding: 20px;
            background: var(--primary-color);
            color: #fff;
        }

        #sidebar ul.components {
            padding: 20px 0;
        }

        #sidebar ul li a {
            padding: 15px 20px;
            font-size: 1.1em;
            display: block;
            color: #333;
            text-decoration: none;
            transition: 0.3s;
        }

        #sidebar ul li a:hover {
            color: var(--primary-color);
            background: #f8f9fa;
            padding-right: 30px;
        }

        #sidebar ul li.active>a {
            color: #fff;
            background: var(--primary-color);
        }

        #content {
            width: 100%;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .nav-icon {
            margin-left: 10px;
            width: 20px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        @if (User.Identity.IsAuthenticated && ViewData["Title"]?.ToString() != "تسجيل الدخول")
        {
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3><i class="fas fa-heartbeat ms-2"></i> تداوي</h3>
                </div>

                <ul class="list-unstyled components">
                    <li>
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home nav-icon"></i> الرئيسية
                        </a>
                    </li>

                    @if (User.IsInRole("Secretary"))
                    {
                        <li>
                            <a asp-controller="Patients" asp-action="Index">
                                <i class="fas fa-users nav-icon"></i> المرضى
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Doctor"))
                    {
                        <li>
                            <a asp-controller="DoctorsDashboard" asp-action="Index">
                                <i class="fas fa-user-md nav-icon"></i> لوحة الطبيب
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Pharmacist"))
                    {
                        <li>
                            <a asp-controller="Pharmacist" asp-action="Index">
                                <i class="fas fa-prescription-bottle-alt nav-icon"></i> الصيدلية
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="#adminSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                <i class="fas fa-shield-alt nav-icon"></i> الإدارة العامة
                            </a>
                            <ul class="collapse list-unstyled" id="adminSubmenu">
                                <li>
                                    <a asp-controller="Admin" asp-action="Index" class="ps-5">لوحة التحكم</a>
                                </li>
                                <li>
                                    <a asp-controller="Admin" asp-action="Users" class="ps-5">إدارة المستخدمين</a>
                                </li>
                                <li>
                                    <a asp-controller="Admin" asp-action="Pharmacies" class="ps-5">إدارة الصيدليات</a>
                                </li>
                                <li>
                                    <a asp-controller="Admin" asp-action="Settings" class="ps-5">إعدادات النظام</a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

                <div class="text-center mt-5">
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="btn btn-outline-danger btn-sm w-75">
                            <i class="fas fa-sign-out-alt ms-1"></i> خروج
                        </button>
                    </form>
                </div>
            </nav>
        }

        <!-- Page Content -->
        <div id="content">
            @if (User.Identity.IsAuthenticated && ViewData["Title"]?.ToString() != "تسجيل الدخول")
            {
                <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4 rounded shadow-sm">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-light border-0">
                            <i class="fas fa-bars fa-lg"></i>
                        </button>
                        <div class="ms-auto">
                            <span class="navbar-text text-primary fw-bold">
                                <i class="fas fa-user-circle ms-1"></i> @User.Identity.Name
                            </span>
                        </div>
                    </div>
                </nav>
            }

            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                if ($('#sidebar').css('margin-right') == '0px') {
                    $('#sidebar').css('margin-right', '-250px');
                } else {
                    $('#sidebar').css('margin-right', '0px');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>