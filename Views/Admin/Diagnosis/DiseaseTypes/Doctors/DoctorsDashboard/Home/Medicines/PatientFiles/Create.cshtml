@model Tadawi.Models.PatientFile
@{
    ViewData["Title"] = "إضافة ملف مريض";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">إضافة ملف مريض جديد</h4>
                <p class="card-description"> أدخل بيانات الملف </p>
                
                <form asp-action="Create" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Id">رقم الملف (ID)</label>
                        <input asp-for="Id" class="form-control" placeholder="سيتم التوليد تلقائياً أو أدخله يدوياً" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Diagnosis">التشخيص</label>
                        <textarea asp-for="Diagnosis" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-gradient-primary mr-2">حفظ</button>
                    <a asp-action="Index" class="btn btn-light">إلغاء</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}