@model Tadawi.Models.Medicine

@{
    ViewData["Title"] = "إضافة دواء جديد";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">إضافة دواء جديد</h4>
                <p class="card-description"> أدخل بيانات الدواء الجديد </p>
                
                <form asp-action="Create" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="MedicineName">الاسم التجاري</label>
                                <input asp-for="MedicineName" class="form-control" placeholder="مثال: Panadol" />
                                <span asp-validation-for="MedicineName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>الاسم العلمي (اختياري)</label>
                                <input name="ScientificName" class="form-control" placeholder="مثال: Paracetamol" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Type">النوع (الشكل الصيدلاني)</label>
                                <select asp-for="Type" class="form-control">
                                    <option value="Tablet">أقراص</option>
                                    <option value="Syrup">شراب</option>
                                    <option value="Injection">حقن</option>
                                    <option value="Cream">مرهم/كريم</option>
                                    <option value="Drops">قطرات</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="text-danger">تاريخ الانتهاء</label>
                                <input type="date" name="ExpiryDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>الكمية المضافة</label>
                                <input type="number" name="StockQuantity" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>سعر الشراء</label>
                                <input type="number" step="0.01" name="PurchasePrice" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>موقع الدواء (الرف)</label>
                                <input type="text" name="ShelfLocation" class="form-control" placeholder="A-1" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">وصف الدواء / طريقة التخزين</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-gradient-primary mr-2">حفظ الدواء</button>
                    <a asp-action="Index" class="btn btn-light">إلغاء</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}