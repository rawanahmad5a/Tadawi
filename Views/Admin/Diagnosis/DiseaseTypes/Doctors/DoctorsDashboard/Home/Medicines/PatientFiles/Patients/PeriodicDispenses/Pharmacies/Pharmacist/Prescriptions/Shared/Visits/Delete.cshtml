@model Tadawi.Models.Visit

@{
    ViewData["Title"] = "حذف زيارة";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card mx-auto">
        <div class="card">
            <div class="card-body text-center">
                <h4 class="card-title text-danger">حذف زيارة</h4>
                <p class="card-description"> هل أنت متأكد من رغبتك في حذف هذه الزيارة؟ </p>
                
                <div class="bg-light p-4 rounded mb-4 text-right" style="direction: rtl;">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">التاريخ:</dt>
                        <dd class="col-sm-8">@Model.VisitDate.ToShortDateString()</dd>

                        <dt class="col-sm-4">الطبيب:</dt>
                        <dd class="col-sm-8">@Model.Doctor?.Name</dd>
                    </dl>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-fw">
                        <i class="mdi mdi-delete"></i> تأكيد الحذف
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-fw">إلغاء</a>
                </form>
            </div>
        </div>
    </div>
</div>
