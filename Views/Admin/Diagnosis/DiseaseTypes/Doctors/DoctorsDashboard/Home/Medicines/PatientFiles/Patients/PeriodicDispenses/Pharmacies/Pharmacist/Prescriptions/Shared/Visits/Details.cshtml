@model Tadawi.Models.Visit
@{
    ViewData["Title"] = "ملف المريض";
}

<div class="container" style="direction: rtl; text-align: right;">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header text-white" style="background-color: #2c3e50;">
                    <i class="fas fa-user-circle"></i> المعلومات الشخصية
                </div>
                <div class="card-body">
                    <p><strong>الاسم:</strong> @Model.Patient.Name</p>
                    <p><strong>العمر:</strong> @Model.Patient.Age سنة</p>
                    <p><strong>العنوان:</strong> @Model.Patient.Address</p>
                    <p><strong>رقم الهاتف:</strong> @Model.Patient.Phone</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm border-top border-info border-5">
                <div class="card-header bg-white">
                    <h4 class="text-info"><i class="fas fa-edit"></i> إضافة تشخيص ووصفة طبية</h4>
                </div>
                <div class="card-body">
                    <form action="/Prescriptions/Create" method="post">
                        <input type="hidden" name="visitId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">التشخيص الحالي</label>
                            <textarea name="diagnosis" class="form-control" rows="3" placeholder="اكتب ملاحظات التشخيص هنا..."></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">اختيار الدواء</label>
                                <select name="medicineId" class="form-select border-info" asp-items="ViewBag.MedicineId"></select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">الجرعة (Dosage)</label>
                                <input type="text" name="dosage" class="form-control" placeholder="مثلاً: 3 مرات يومياً" />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-lg w-100 text-white" style="background-color: #1abc9c;">
                            <i class="fas fa-paper-plane"></i> إرسال الوصفة للصيدلية
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>