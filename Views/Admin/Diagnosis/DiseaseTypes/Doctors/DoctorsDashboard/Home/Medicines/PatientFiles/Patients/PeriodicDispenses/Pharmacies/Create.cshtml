@model Tadawi.Models.Pharmacy
@{
    ViewData["Title"] = "إضافة صيدلية";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">إضافة صيدلية جديدة</h4>
                <p class="card-description"> أدخل بيانات الصيدلية </p>
                
                <form asp-action="Create" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name">اسم الصيدلية</label>
                        <input asp-for="Name" class="form-control" placeholder="اسم الصيدلية الرسمي" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Phone">رقم الهاتف</label>
                        <input asp-for="Phone" class="form-control" placeholder="رقم التواصل" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Location">الموقع / العنوان</label>
                        <input asp-for="Location" class="form-control" placeholder="العنوان بالتفصيل" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-gradient-primary mr-2">حفظ</button>
                    <a asp-action="Index" class="btn btn-light">إلغاء</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}