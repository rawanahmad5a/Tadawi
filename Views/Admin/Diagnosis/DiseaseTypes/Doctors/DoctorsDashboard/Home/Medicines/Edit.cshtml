@model Tadawi.Models.Medicine

@{
    ViewData["Title"] = "تعديل دواء";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">تعديل بيانات الدواء</h4>
                <p class="card-description"> قم بتعديل البيانات المطلوبة </p>
                
                <form asp-action="Edit" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group">
                        <label asp-for="MedicineName">الاسم التجاري</label>
                        <input asp-for="MedicineName" class="form-control" />
                        <span asp-validation-for="MedicineName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Description">الوصف</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Type">النوع</label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-gradient-primary mr-2">حفظ التعديلات</button>
                    <a asp-action="Index" class="btn btn-light">إلغاء</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
