@model IEnumerable<Tadawi.Models.Patient>

@{
    ViewData["Title"] = "قائمة المرضى";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User.IsInRole("Secretary") || User.IsInRole("Admin"))
{
    <div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeIn">
        <h2 class="text-primary fw-bold mb-0"><i class="fas fa-users me-2"></i> إدارة ملفات المرضى</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-right me-1"></i> العودة للرئيسية
        </a>
    </div>

    <div class="row mb-5 animate__animated animate__fadeIn">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 text-center p-4 h-100 hover-shadow transition-all">
                <div class="card-body">
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-4"
                        style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-file-medical fa-2x"></i>
                    </div>
                    <h3 class="fw-bold mb-4">إضافة ملف جديد</h3>
                    <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">
                        <i class="fas fa-plus-circle me-1"></i> فتح ملف
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 text-center p-4 h-100 hover-shadow transition-all">
                <div class="card-body">
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-4"
                        style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-search fa-2x"></i>
                    </div>
                    <h3 class="fw-bold mb-4">بحث عن ملف</h3>
                    <button class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm"
                        onclick="document.getElementById('patientSearch').focus()">
                        <i class="fas fa-search me-1"></i> ابدأ البحث
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h5 class="text-primary fw-bold mb-0 text-end"><i class="fas fa-list me-2"></i> قائمة المرضى</h5>
    </div>
</div>

<div class="card">
    <div class="card-header bg-white">
        <div class="input-group">
            <span class="input-group-text bg-light border-end-0">
                <i class="fas fa-search text-muted"></i>
            </span>
            <input type="text" id="patientSearch" class="form-control border-start-0"
                placeholder="بحث عن مريض بالاسم أو رقم الهاتف...">
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0" id="patientsTable">
                <thead class="table-light">
                    <tr>
                        <th>رقم الملف</th>
                        <th>الاسم</th>
                        <th>رقم الهاتف</th>
                        <th>العمر</th>
                        <th>الجنس</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PatientFileId</td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.Age</td>
                            <td>@item.Gender</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white me-1"
                                    title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1"
                                    title="التفاصيل">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-1"
                                    title="حذف">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a asp-controller="Visits" asp-action="Create" asp-route-patientId="@item.Id"
                                    class="btn btn-sm btn-primary" title="حجز موعد">
                                    <i class="fas fa-calendar-plus me-1"></i> حجز موعد
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, .175) !important;
        }

        .transition-all {
            transition: all 0.3s ease;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#patientSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#patientsTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}