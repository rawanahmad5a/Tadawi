@model Tadawi.Models.Doctor

@{
    ViewData["Title"] = "تفاصيل الطبيب";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="text-center mb-4 border-bottom pb-3">
                    <h2 class="text-primary"><i class="mdi mdi-doctor"></i> تفاصيل الطبيب</h2>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12 text-center">
                        <div class="mb-3">
                            <i class="mdi mdi-account-circle mdi-48px text-primary"></i>
                        </div>
                        <h4 class="font-weight-bold">@Model.Name</h4>
                        <p class="badge badge-info">@Model.Specialization</p>
                        <p class="text-muted"><i class="mdi mdi-phone"></i> @Model.Phone</p>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient-warning btn-fw me-2">
                        <i class="mdi mdi-pencil"></i> تعديل
                    </a>
                    <a asp-action="Index" class="btn btn-light btn-fw">
                        <i class="mdi mdi-arrow-right"></i> عودة
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
