@page
@model LoginModel

@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header text-center bg-white border-bottom-0 pt-4">
                    <h3 class="font-weight-light my-4 text-primary">
                        <i class="fas fa-user-md fa-2x mb-3 d-block"></i>
                        تسجيل الدخول
                    </h3>
                </div>
                <div class="card-body px-5 pb-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username"
                                aria-required="true" placeholder="البريد الإلكتروني" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp-for="Input.Password" class="form-control form-control-lg"
                                autocomplete="current-password" aria-required="true" placeholder="كلمة المرور" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                تذكرني
                            </label>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">دخول</button>
                        </div>

                        <div class="text-center mt-3">
                            <a id="forgot-password" asp-page="./ForgotPassword"
                                class="text-decoration-none small text-muted">نسيت كلمة المرور؟</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}